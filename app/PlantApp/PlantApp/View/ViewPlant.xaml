<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlantApp.View.ViewPlant">
    <StackLayout x:Name="stack1" BackgroundColor="#0cf78e">
        

        <ListView x:Name="PlantList" 
                  ItemsSource="{Binding Plants}" ItemSelected="PlantList_OnItemSelected">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding allInfo}">

                    </TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
        <AbsoluteLayout Margin="0, 0, 0, 15">
            <ImageButton Source="addIcon.png" 
                         BackgroundColor="Transparent"
                         AbsoluteLayout.LayoutFlags="PositionProportional"  
                         AbsoluteLayout.LayoutBounds=".95,.95,85,85"
                         Command="{Binding NewPlantCommand}"/>
        </AbsoluteLayout>
    </StackLayout>
</ContentPage>